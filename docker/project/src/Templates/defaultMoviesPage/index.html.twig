{% extends 'base.html.twig' %}

{% block title %}We Movies{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <div class="container mx-auto p-4">
            <h1 class="text-3xl font-bold mb-4">Liste des Films</h1>

            <div class="mb-4">
                <label for="search" class="block text-sm font-medium text-gray-700">Recherche</label>
                <input type="text" id="search" name="search" class="mt-1 p-2 border rounded-md w-full">
            </div>
            <div id="error-field" class="text-red-500 text-sm mt-1"></div>

            <div id="categories" class="my-4">
                <h2 class="text-2xl font-semibold mb-2">Genres</h2>
                <form id="category-form">
                    <div class="flex space-x-4">
                        {% for genre in genres %}
                            <label>
                                <input type="checkbox" name="{{ genre.name }}" value="{{ genre.id }}" class="mr-2" /> {{ genre.name }}
                            </label>
                        {% endfor %}
                    </div>
                </form>
            </div>

            <div id="videos-container" class="mb-4">

            </div>

            <ul id="movies-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            </ul>
        </div>

        {% include 'movie_details_modal.html.twig' %}
    </div>
{% endblock %}
